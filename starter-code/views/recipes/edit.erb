<h2>Edit recipe</h2>

<form class="form recipe" id="edit-recipe" method="post" action="/recipes/<%= @recipe.id %>">
  <input type="hidden" name="_method" value="put">

  <div class="form-group">
    <label for="recipe[title]">Title:</label>
    <input class="form-control" type="text" name="recipe[title]" id="recipe_title" value="<%= @recipe.title %>">
  </div>

  <div class="form-group">
    <label for="recipe[description]">Description:</label>
    <input class="form-control" type="text" name="recipe[description]" id="recipe_description" value="<%= @recipe.description %>">
  </div>

  <div class="form-group">
    <label for="recipe[servings]">Servings:</label>
    <input class="form-control" type="data" name="recipe[servings]" id="recipe_servings" value="<%= @recipe.servings %>">
  </div>

  <div>
    <input type="submit" class="btn" value="Add recipe">
  </div>
</form>